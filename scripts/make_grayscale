import tqdm
import numpy as np
import glob
from PIL import Image
import cv2

files = glob.glob('./data/SRGAN_ImageNet/*.JPEG')

for i, file in enumerate(files):
    
    img = files[i]

    img_hr = cv2.imread(img)

    img_hr = cv2.cvtColor(img_hr, cv2.COLOR_BGR2GRAY)

    cv2.imwrite("./data/ImageNet_gray/img_" + str(i) +".png", img_hr)



